general {
        colors = true
	color_good = "#a3be8c"
	color_degraded = "#ebcb8b"
	color_bad = "#d08770"
        interval = 5
}

#order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = " %essid %quality "
        format_down = " wifi down "
}

ethernet _first_ {
        format_up = " %speed "
        format_down = ""
}

memory {
        format = " %used/%available "
        threshold_degraded = "15%"
        threshold_critical = "5%"
}

battery all {
	threshold_type = "percentage"
	low_threshold = "10"
	integer_battery_capacity = "true"
	last_full_capacity = "true"
        format = " %percentage %remaining left "
}

volume master {
        format = " %volume"
        format_muted = " muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = " %A, %B %d  %I:%M %P"
}
