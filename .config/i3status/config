# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	color_good = "#c0d600"
	color_degraded = "#4e431d"
	color_bad = "#da0000"
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "memory"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W:  %essid %quality"
        format_down = "W:  down"
}

ethernet _first_ {
        format_up = "  E:  (%speed)"
        format_down = ""
}

memory {
        format = "|  M: %used/%available  |"
        threshold_degraded = "15%"
        threshold_critical = "5%"
}

battery all {
	threshold_type = "percentage"
	low_threshold = "10"
	integer_battery_capacity = "true"
	last_full_capacity = "true"
        format = "B:  %percentage,  %remaining left"
}

volume master {
        format = "|  ♪: %volume  |"
        format_muted = "|  ♪: muted  |"
        device = "sysdefault"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%A, %B %d  %I:%M %P"
}
